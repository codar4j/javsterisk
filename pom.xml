<?xml version="1.0" encoding="UTF-8"?>

<project>

	<modelVersion>4.0.0</modelVersion>
	<groupId>com.web.javsterisk</groupId>
  	<artifactId>javsterisk-free</artifactId>
  	<packaging>war</packaging>
  	<version>1.0-SNAPSHOT</version>
  	<name>javsterisk free Project</name>
  	<url>http://www.javsterisk.org</url>
  	
  	<build>
		<sourceDirectory>src</sourceDirectory>
		<plugins>
			
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<warSourceDirectory>WebContent</warSourceDirectory>
					<packagingIncludes>WEB-INF/lib/*.*</packagingIncludes>                
					<failOnMissingWebXml>true</failOnMissingWebXml>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>servlet-api</artifactId>
			<version>2.5</version>
		</dependency>
		<dependency>
		  <groupId>javax.persistence</groupId>
		  <artifactId>hibernate-jpa</artifactId>  
		  <version>1.0.0</version>
		  <systemPath>${project.basedir}/WebContent/WEB-INF/lib/hibernate-jpa-2.1-api-1.0.0.Final.jar</systemPath>
		</dependency>
		<dependency>
		    <groupId>com.sun.faces</groupId>
		    <artifactId>javax.faces</artifactId>
		    <version>2.2.8</version>
		    <scope>system</scope>
		    <systemPath>${project.basedir}/WebContent/WEB-INF/lib/javax.faces-2.2.8.jar</systemPath>
		</dependency>
		
	</dependencies>

</project>