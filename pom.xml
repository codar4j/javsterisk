<?xml version="1.0" encoding="UTF-8"?>

<project>

	<modelVersion>4.0.0</modelVersion>
	<groupId>com.web.javsterisk</groupId>
  	<artifactId>javsterisk-free</artifactId>
  	<packaging>war</packaging>
  	<version>1.0-SNAPSHOT</version>
  	<name>javsterisk free Project</name>
  	<url>http://www.javsterisk.org</url>
  
  	<build>
		<sourceDirectory>src</sourceDirectory>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.2</version>
				<configuration>
				    <!-- <include>WebContent/WEB-INF/lib/*.jar</include> -->
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<warSourceDirectory>WebContent</warSourceDirectory>
					<packagingIncludes>WEB-INF/lib/*.*</packagingIncludes>                
					<failOnMissingWebXml>false</failOnMissingWebXml>
				</configuration>
			</plugin>
		</plugins>
	</build>
	
	<dependencies>
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>servlet-api</artifactId>
			<version>2.5</version>
		</dependency>
		<dependency>
		    <groupId>com.sun.faces</groupId>
		    <artifactId>javax.faces</artifactId>
		    <version>2.2.8</version>
		    <scope>system</scope>
		    <systemPath>${project.basedir}/WebContent/WEB-INF/lib/javax.faces-2.2.8.jar</systemPath>
		</dependency>	
		<dependency>
		    <groupId>org.apache.shiro</groupId>
		    <artifactId>shiro-all</artifactId>
		    <version>1.2.2</version>
		    <scope>system</scope>
		    <systemPath>${project.basedir}/WebContent/WEB-INF/lib/shiro-all-1.2.2.jar</systemPath>
		</dependency>
		<dependency>
		    <groupId>org.apache.commons</groupId>
		    <artifactId>commons-lang3</artifactId>
		    <version>3.1</version>
		    <scope>system</scope>
		    <systemPath>${project.basedir}/WebContent/WEB-INF/lib/commons-lang3-3.1.jar</systemPath>
		</dependency>	
		<dependency>
		    <groupId>org.apache.logging</groupId>
		    <artifactId>log4j-core</artifactId>
		    <version>2.1</version>
		    <scope>system</scope>
		    <systemPath>${project.basedir}/WebContent/WEB-INF/lib/log4j-core-2.1.jar</systemPath>
		</dependency>
		<dependency>
		    <groupId>org.apache.logging</groupId>
		    <artifactId>log4j-api</artifactId>
		    <version>2.1</version>
		    <scope>system</scope>
		    <systemPath>${project.basedir}/WebContent/WEB-INF/lib/log4j-api-2.1.jar</systemPath>
		</dependency>		
		<dependency>
		   <groupId>javax.persistence</groupId>
		   <artifactId>persistence-api</artifactId>
		   <version>1.0.2</version>
		   <scope>provided</scope>
		</dependency>	
	</dependencies>

</project>